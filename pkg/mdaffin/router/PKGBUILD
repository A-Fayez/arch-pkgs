pkgname=mdaffin-router
pkgver=1
pkgrel=1
pkgdesc="System config for mdaffin systems"
arch=(any)
url="https://github.com/mdaffin/arch-repo"
license=(MIT)
groups=(mdaffin)
install=install

depends=(mdaffin-base rp-pppoe dnsmasq nftables)

rootdir=$PWD

package() {
    cp -a "$rootdir/files/"* "$pkgdir"
}
