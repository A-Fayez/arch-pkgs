# Maintainer: Michael Daffin <michael@daffin.io>
pkgname=mdaffin-network-gui
pkgver=0.0.1
pkgrel=1
pkgdesc="Networking components for gui enabled systems"
arch=('any')
url="https://github.com/mdaffin/mdaffin-arch-repo/pkg/network-gui"
license=('MIT')
groups=('mdaffin')
depends=(
    'networkmanager'
    'network-manager-applet'
)

package() {
    install -dm 0755 "$pkgdir/usr/lib/systemd/system/multi-user.target.wants"
    ln -s /usr/lib/systemd/system/NetworkManager.service \
        "$pkgdir/usr/lib/systemd/system/dbus-org.freedesktop.NetworkManager.service"
    ln -s /usr/lib/systemd/system/NetworkManager.service \
        "$pkgdir/usr/lib/systemd/system/multi-user.target.wants/NetworkManager.service"
    ln -s /usr/lib/systemd/system/NetworkManager-dispatcher.service \
        "$pkgdir/usr/lib/systemd/system/dbus-org.freedesktop.nm-dispatcher.service"
}
